{
    "name": "antidot-fw/runtime",
    "description": "Anti.Framework Runtime library",
    "keywords": [
        "psr-7",
        "psr-11",
        "psr-15"
    ],
    "type": "library",
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "kpicaza"
        }
    ],
    "require": {
        "php": "^7.4|>=8.0",
        "antidot-fw/framework": "^0.2|@dev",
        "symfony/runtime": "^5.3"
    },
    "require-dev": {
        "infection/infection": "^0.25",
        "phpro/grumphp": "^1.0",
        "phpstan/phpstan": "^1.2",
        "phpunit/phpunit": "^9.0",
        "roave/infection-static-analysis-plugin": "^1.10",
        "squizlabs/php_codesniffer": "^3.4",
        "symfony/var-dumper": "^5.0",
        "vimeo/psalm": "^4.0.0"
    },
    "autoload": {
        "psr-4": {
            "Antidot\\Runtime\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Antidot\\Test\\Runtime\\": "test"
        }
    },
    "scripts": {
        "check-all": [
            "@cs-check",
            "@test",
            "@inspect",
            "@psalm",
            "@infection"
        ],
        "cs-check": "phpcs src --colors",
        "cs-fix": "phpcbf src --colors",
        "infection": "XDEBUG_MODE=coverage roave-infection-static-analysis-plugin",
        "inspect": "phpstan analyse src -l9 --ansi",
        "psalm": "psalm",
        "test": "phpunit --colors=always"
    },
    "config": {
        "sort-packages": true
    }
}
